@model AddTicketVM

<form method="post">
    <div class="row">
        <div class="col-8">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeatClass"></label>
                <select class="form-control" asp-for="SeatClass" asp-items="Model.SeatClasses"></select>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control" />
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.FlightId, Model.Flights, "Select a flight", new { @class = "form-control" })
            </div>
        </div>
    </div>
<partial name="_CreateAndBackToList" />
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}