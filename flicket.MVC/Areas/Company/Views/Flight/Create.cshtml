@model AddFlightVM

<form method="post">
    <div class="row">
        <div class="col-8">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.AirportFromId, Model.Airports, "From Airport", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.AirportToId, Model.Airports, "To Airport", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.AirlineId, Model.Airlines, "Select an Airline", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Departure"></label>
                <input asp-for="Departure" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Arrival"></label>
                <input asp-for="Arrival" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EconomyPrice"></label>
                <input asp-for="EconomyPrice" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BusinessPrice"></label>
                <input asp-for="BusinessPrice" class="form-control" />
            </div>
        </div>
    </div>

    <partial name="_CreateAndBackToList" />
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}