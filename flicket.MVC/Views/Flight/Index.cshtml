@{
}

<div class="row">
    <div class="col-10 offset-2">
        @foreach (var flight in Model)
        {
            <div class="card">
                <div class="card-header">
                    @flight.From.Location (@flight.From.Name) <i class="fa fa-plane-departure"></i> @flight.To.Location (@flight.To.Name)
                </div>
                <div class="card-body">

                </div>
            </div>
        }
    </div>
</div>
